{% extends "::base.html.twig" %}

{% block title %}AppBundle:Model:show{% endblock %}

{% block body %}
    <div class="container">
        <div class="row page-header not-printable">
            <div class="col-md-10">
                <h1>{{model.name}} <small></small></h1>
            </div>
            <div class="col-md-2">
                <button class="btn btn-success pull-right" id="use-later-cmd" onclick="print()"><i class="fa fa-print"></i></button>
            </div>
        </div>
        <div id="editor"></div>
        <div class="model" id="model">
            <div  >
                {% for item in model.content %}
                    {% if item.type == "layout" and item.title== "1 Column" %}
                        <div class="row">
                            <div class="col-md-12 col-xs-12">
                                {% set composants = item.composants %}
                                {% for composant in composants %}
                                    {% if composant.tpl == "header" %}
                                        <div class="panel panel-default">
                                            <div class="panel-body" summernote airMode>
                                                {{composant.text |params }}
                                            </div>
                                        </div>
                                    {% elseif composant.tpl == "table" %}
                                        {{composant|entitytable}}
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    {% elseif item.type == "layout" and item.title== "2 Columns" %}
                        <div class="row">
                            <div class="col-md-6 col-xs-6">
                                {% set left = item.left|default([]) %}
                                {% for leftComp in left %}
                                    {% if leftComp.tpl == "header" %}
                                        <div class="panel panel-default">
                                            <div class="panel-body" summernote airMode>
                                                {{ include(template_from_string(leftComp.text|raw)) }}
                                            </div>
                                        </div>
                                    {% elseif leftComp.tpl == "table" %}
                                        <div class="panel panel-default">
                                            <div class="panel-heading"><h4>{{ include(template_from_string(leftComp.title|raw))}}</h4><hr /></div>
                                            <div class="panel-body" summernote airMode>
                                                {{ include(template_from_string(leftComp.description|raw)) }}
                                            </div>
                                            <table class="table">
                                                <thead>
                                                    {% for head in leftComp.attributes %}
                                                    <th>{{ include(template_from_string(head.label|raw))}}</th>
                                                    {% endfor %}
                                                </thead>
                                                <tbody>
                                                    {% for row in _context[leftComp.title] %}
                                                        <tr>
                                                            {% for field in leftComp.attributes %}
                                                                <td>
                                                                    {{ attribute(row, field) }}
                                                                </td>
                                                            {% endfor %}
                                                        </tr>
                                                    {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                            <div class="col-md-6 col-xs-6">
                                {% set right = item.right|default([]) %}
                                {% for rightComp in right %}
                                    {% if rightComp.tpl == "header" %}
                                        <div class="panel panel-default">
                                            <div class="panel-body" summernote airMode >
                                                {{ include(template_from_string(rightComp.text|raw)) }}
                                            </div>
                                        </div>
                                    {% elseif rightComp.tpl == "table" %}
                                        <div class="panel panel-default">
                                            <div class="panel-heading"><h4>{{ include(template_from_string(rightComp.title))}}</h4><hr /></div>
                                            <div class="panel-body" summernote airMode>
                                                {{ include(template_from_string(rightComp.description))}}
                                            </div>
                                            <table class="table">
                                                <thead>
                                                    {% for head in rightComp.attributes %}
                                                    <th>{{ include(template_from_string(head.label))}}</th>
                                                    {% endfor %}
                                                </thead>
                                                <tbody>
                                                    {% for row in _context[rightComp.title] %}
                                                        <tr>
                                                            {% for field in rightComp.attributes %}
                                                                <td>
                                                                    {{ attribute(row, field) }}
                                                                </td>
                                                            {% endfor %}
                                                        </tr>
                                                    {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    {% endif%}
                {% endfor %}

            </div>
        </div>
    </div>
    <style>
        .model{
            padding: 10px;
        }
        .model:hover{
            background:#EEE;

        }
        .panel-default {
            border-color: transparent;
        }
        .panel {
            -webkit-box-shadow: 0 1px 1px rgba(0,0,0,.05);
            box-shadow: 0 0px 0px rgba(0,0,0,.05);
        }
        @media print {
            .not-printable {
                display: none;
            }
            .sf-toolbar{
                display: none;
            }
            .note-popover{
                display:none;
            }
        }
    </style>
    {% block javascripts %}
        <script src="{{ asset("assets/vendor/summernote/dist/summernote.min.js")}}"></script>
        <script src="{{ asset("assets/vendor/angular-summernote/dist/angular-summernote.min.js")}}"></script>
        {#<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.2/jspdf.debug.js"></script>#}
        <script>
                    $(document).ready(function () {
                        $('#cmd').click(function () {
                            var doc = new jsPDF();
                            var html = $('#model').html();
// We'll make our own renderer to skip this editor
                            var specialElementHandlers = {'#editor': function (element, renderer) {
                                    return true;
                                }
                            };

// All units are in the set measurement for the document
// This can be changed to "pt" (points), "mm" (Default), "cm", "in"
                            doc.fromHTML(html, 15, 15, {'width': 170,
                                'elementHandlers': specialElementHandlers
                            });
                            doc.save(document.title + ".pdf");
                            doc.output("dataurlnewwindow");
                        });
                    });
        </script>
    {% endblock %}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset("assets/vendor/summernote/dist/summernote.css")}}"/>
    {% endblock %}
{% endblock %}
